<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="#ffffff">
    <ImageView
               android:id="@+id/animatedImage"
               android:layout_width="118dp"
               android:layout_height="118dp"
               android:src="@drawable/golang"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp" android:layout_gravity="center_horizontal"
            android:id="@+id/map"
            android:background="@drawable/style" android:backgroundTint="#65e843">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/gopher" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:src="@drawable/golang"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashboard" android:background="#000000">

        <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/option"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:src="@drawable/info"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton2"
                android:layout_above="@+id/imageButton4" android:layout_centerHorizontal="true"
                android:src="@drawable/up"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/left"
                android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imageButton2"
                android:layout_marginRight="18dp"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/right" android:layout_alignTop="@+id/imageButton3"
                android:layout_toRightOf="@+id/imageButton2" android:layout_marginLeft="20dp"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton"
                android:layout_below="@+id/imageButton3" android:layout_toRightOf="@+id/imageButton3"
                android:src="@drawable/down"/>
    </RelativeLayout>
    <!--<TextView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Hello World, MyActivity"-->
    <!--/>-->
</LinearLayout>

